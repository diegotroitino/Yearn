@{
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js">
<head>
    <title></title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
        <link rel="apple-touch-icon" href="~/Content/images/icon.png"/>
        -->
    @Styles.Render("~/bundles/css/core.css")
    <link href="~/Content/css/home.css" rel="stylesheet" type="text/css" />
    <!-- IE Mobile fix -->
    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
</head>
<body>
    <section class="logo-container">
        <h1>Ticker.to</h1>
        <p class="lead text-center">Count the ticks left to the moments you anticipate the most</p>
    </section>
    <section class="login-container">
        <div class="row">
            <div class="col-md-5">
                <h2 class="login-title">
                    new here?
                </h2>
                <p class="login-subtitle">
                    start by creating your first event
                </p>
                <form class="container login-form">
                    <input type="email" class="form-group form-control" placeholder="Email" />
                    <input type="text" class="form-group form-control" placeholder="Event name" />
                    <input type="text" class="form-group form-control" placeholder="Date" />
                    <button type="submit" class="btn btn-primary btn-block form-group">Create event</button>
                </form>
            </div>
            <div class="col-md-2">
                <h1 class="font-motion-picture form-separator hidden-xs hidden-sm">or</h1>
                <h1 class="font-motion-picture form-separator visible-xs visible-sm">or</h1>
            </div>
            <div class="col-md-5">
                <h2 class="login-title">
                    already a member?
                </h2>
                <p class="login-subtitle">
                    login into your account
                </p>
                <form class="container login-form">
                    <input type="email" class="form-group form-control" placeholder="Email" />
                    <input type="password" class="form-group form-control" placeholder="Password" />
                    <button type="submit" class="btn btn-primary btn-block form-group">Log In</button>
                </form>
            </div>
        </div>
    </section>
    @Scripts.Render("~/bundles/js/core.js")
</body>
</html>
